<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATN SHOP</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
</head>
<body class="text-center">
    <h1>Register page</h1>
    <form class="form-group" action="/doRegister" method="post">
        <div class="m-auto" style="width: 400px;">
            <label> <b>UserName: </b></label>
            <input required class="form-control" type="text" name="username">
        </div>
        <div class="m-auto"  style="width: 400px;">
            <label> <b>Password: </b></label>
            <input required class="form-control" type="password" id="password" name="password" onkeyup='check();'>
        </div>
        <div class="m-auto"  style="width: 400px;">
            <label> <b>Password again: </b></label>
            <input required class="form-control" type="password" id="confirm_password" onkeyup='check();'>
            <span id="message"></span>
        </div>
        <input class="mt-3 btn btn-info" type="submit" value="Register">
    </form>
    <button class="btn btn-outline-dark"> <a href="/"> Login </a>  </button>
</body>
</html>
<script>
    var check = function() {
        var value = document.getElementById('password').value;
        if (checkPassword(value)) {
            if (value === document.getElementById('confirm_password').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'password matching';
            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'password not matching';
            }
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'Input Password and Submit [5 to 15 characters which contain at least one numeric digit and a special character]';
        }
    }

    function checkPassword(inputtxt) {
        var passw = /^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{5,15}$/;
        if (inputtxt.match(passw)) {
            return true;
        } else {
            return false;
        }
    }
</script>
