<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
</head>
<body>
<h1>ATN SHOP</h1>
{{#if isAdmin}}
<!--    nếu là admin mới cho hiện nút thêm product-->
    <button class="btn btn-primary">  <a style="color: yellow" href="/insert">New Product</a></button>
{{/if}}
<button class="btn">
    <a href="/logout" style="color: red;">Logout</a>
</button>
<form class="form-inline" action="/search" method="post">
    <input class="form-control m-3" placeholder="search by name" type="text" name="txtName"/>
    <select class="form-control m-3" name="color" id="color">
        <option value="all" selected>All</option>
        <option value="pink">Pink</option>
        <option value="blue">Blue</option>
        <option value="purple">Purple</option>
    </select>
    <select class="form-control m-3" name="price" id="price">
        <option value="all" selected>All</option>
        <option value="1">10000 - 99999</option>
        <option value="2">100000 - 999999</option>
        <option value="3">1000000 - 9999999</option>
        <option value="other">Other</option>
    </select>
    <button class="form-group btn btn-dark" type="submit">Search</button>
</form>
{{#if isAdmin}}
    <ul>

        {{# each model}}
            <li>
                <div class="row">
                    <div class="col-md-3">
                        <img src="{{fileName}}" width="100%" height="100%" style="max-height: 400px">
                    </div>
                    <div class="col-md-9 flex-row">
                        <div>
                            <div><b> Code: </b>{{code}}</div>
                            <div><b> Name: </b>{{name}}</div>
                            <div><b> Price: </b>{{price}}</div>
                            <div><b> Color: </b>{{color}}</div>
                        </div>
                        <div class="align-content-end justify-content-end">
<!--                        nếu là admin thì sẽ hiện 3 button này -->
                            <button  class="btn">
                                <a href="/delete?id={{_id}}" style="color: red;">Delete</a>
                            </button>
                            <button class="btn"><a href="/edit?id={{_id}}">Edit</a>  </button>
                            <button class="btn"> <a href="/view/{{_id}}">View</a> </button>
                        </div>
                    </div>
                </div>
            </li>
        {{/each}}
    </ul>
{{^}}
<!--    còn không thì đó là user chỉ hiển thị button view-->
    <ul>
    {{# each model}}
        <li>
            <div class="row">
                <div class="col-md-3">
                    <img src="{{fileName}}" width="100%" height="100%" style="max-height: 400px">
                </div>
                <div class="col-md-9 flex-row">
                    <div>
                        <div><b> Code: </b>{{code}}</div>
                        <div><b> Name: </b>{{name}}</div>
                        <div><b> Price: </b>{{price}}</div>
                        <div><b> Color: </b>{{color}}</div>
                    </div>
                    <div class="align-content-end justify-content-end">
                            <button class="btn"> <a href="/view/{{_id}}">View</a> </button>
                    </div>
                </div>
            </div>
        </li>
    {{/each}}
    </ul>
{{/if}}

</body>
</html>
